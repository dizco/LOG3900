<Window x:Class="PolyPaint.Views.PasswordPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dessin protégé" Height="205.297" Width="400" ResizeMode="NoResize">
    <StackPanel Background="#FFE4F0F2" Margin="0,0,0,-19">
        <Label Content="Entrez le mot de passe du dessin" FontWeight="Bold" FontSize="18" Height="37" Margin="10,10,10,20"/>
        <PasswordBox x:Name="DrawingPassword" FontSize="18" Margin="18,0,10,0" Height="35"/>
        <Button x:Name="Open" Content="Valider" Background="#FF2B3ACF" FontWeight="Bold" Foreground="White" FontSize="18" Click="OpenDrawingClicked" Margin="235,10,10,0" Height="40"/>
    </StackPanel>
</Window>
